<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/name"
            android:background="@color/move_name_background"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:textAllCaps="true"
            android:padding="3dp"
            android:gravity="center"/>

        <LinearLayout
            android:id="@+id/details_container"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/pretext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/input_container_margin_sides"
                android:layout_marginStart="@dimen/input_container_margin_sides"
                android:layout_marginRight="@dimen/input_container_margin_sides"
                android:layout_marginEnd="@dimen/input_container_margin_sides"
                android:layout_marginTop="@dimen/input_container_margin_top_bottom"
                android:textSize="12sp"
                android:textColor="@android:color/holo_red_dark"
                android:textAllCaps="true"/>

            <LinearLayout
                android:id="@+id/input_container"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/input_container_margin_sides"
                android:layout_marginStart="@dimen/input_container_margin_sides"
                android:layout_marginRight="@dimen/input_container_margin_sides"
                android:layout_marginEnd="@dimen/input_container_margin_sides"
                android:layout_marginTop="@dimen/input_container_margin_top_bottom"
                android:layout_marginBottom="@dimen/input_container_margin_top_bottom"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/posttext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/input_container_margin_sides"
                android:layout_marginStart="@dimen/input_container_margin_sides"
                android:layout_marginRight="@dimen/input_container_margin_sides"
                android:layout_marginEnd="@dimen/input_container_margin_sides"
                android:layout_marginBottom="@dimen/input_container_margin_top_bottom"
                android:textSize="12sp"
                android:textColor="@android:color/holo_red_dark"
                android:textAllCaps="true"/>

            <TextView
                android:id="@+id/description"
                android:background="@color/description_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:textColor="@color/off_white"
                android:textSize="15sp"
                android:gravity="center_horizontal"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/bottom_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/divider_color"/>

</LinearLayout>